 @model IEnumerable<Employee>
    @{
        ViewData["Title"] = "AllEmployees";
    }

    

@*<a asp-action="Create" class="btn btn-success">Create New Employee </a>*@


    <br />

        <h1> All Employees</h1>
        <br />
        <br />
        <a  asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>
        @if (Model.Count()>0)
        {
        <table class="table table-striped table-hover mt-3">
            <thead>
                <tr>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.Salary)</th>
                <td>@Html.DisplayNameFor(D => D.Address)</td>
               @*@ <th>@Html.DisplayNameFor(D => D.PhoneNumber)</th>*@
                <th>@Html.DisplayNameFor(D=>D.IsActive)</th>
                 <th>@Html.DisplayNameFor(D => D.Gender)</th> 
                <th>@Html.DisplayNameFor(D =>D.Email)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

                </tr>

            </thead>

            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                    <td>@employee.Name</td>
                    <td>@Html.DisplayFor(m => employee.Age)</td>
                    <td>@Html.DisplayFor(m => employee.Salary)</td>
                    <td>@Html.DisplayFor(m => employee.Address)</td> 
                    <td>@Html.DisplayFor(m => employee.IsActive)</td>
                    <td>@Html.DisplayFor(m => employee.Gender)</td> 
                    <td>@Html.DisplayFor(m => employee.Email)</td>
                        <partial name="_ButtonPartial" model="@employee.Id" />
                    </tr>

                }

            </tbody>
        </table>
        }
    else
    {
        <div class="mt-5 alert alert-warning">
            <h3> There is No Employees</h3>
        </div>

    }

